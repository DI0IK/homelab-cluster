{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":automergeStableNonMajor"],
  "flux": {
    "managerFilePatterns": [
      "/(?:^|/)gotk-components\\.ya?ml$/",
      "/(?:^|/)helm\\.ya?ml$/",
      "/apps/.+\\.ya?ml$/"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": ["/apps/.+\\.ya?ml$/"]
  },
  "packageRules": [
    {
      "matchPackageNames": ["ghcr.io/hotio/**"],
      "extractVersion": "^release-(.*)$",
      "versioning": "semver",
      "groupName": "hotio container images"
    }
  ]
}
